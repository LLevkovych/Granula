# Database (PostgreSQL for better performance)
# Local (host):
DATABASE_URL=postgresql+asyncpg://granula_user:granula_pass@localhost:5432/granula
# In Docker, use the service name as host (uncomment next line and comment the previous one):
# DATABASE_URL=postgresql+asyncpg://postgres@postgres:5432/postgres

# Pooling and connection stability (PostgreSQL)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30.0
DB_ECHO=false

# Processing settings
MAX_CONCURRENCY=10
CHUNK_SIZE=10000
MAX_RETRIES=3
BASE_BACKOFF=1.0
MAX_BACKOFF=60.0

# File settings
MAX_UPLOAD_MB=500
DELETE_FILE_ON_COMPLETE=false

# Content types (comma-separated)
ALLOWED_CONTENT_TYPES=text/csv,application/csv

# Testing helpers
DISABLE_BACKGROUND=false 